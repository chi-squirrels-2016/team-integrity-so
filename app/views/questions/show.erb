<h1>Question: <%= @question.body %></h1>
<a id="question_comment_btn" href="/questions/<%= @question.id %>/responses">Comment on Question</a>

<ul id="question-comment-ul">
  <% @question_responses.each do |question_response| %>
    <li class="question-comment-list">
      Question Comment: <%= question_response.body %><br>
      <span>Written by <%= question_response.user.email %></span>
    </li>
  <% end %>
</ul>

<% counter = 0 %>

<ul id='answer-list'>
  <% @answers.each do |answer| %>
      <li class="answers-list">
        <% if @star == answer.id %>
          <span>BEST</span>
        <% end %>
        <% if @question.id == current_user.id %>
          <a href="/questions/<%= @question.id %>/answers/<%= answer.id %>/best_answer">Best Answer</a>
        <% end %>
        Answer: <%= answer.body %>
        <br>
        <span>Written by <%= answer.user.email %></span><br>
        <a href="/answers/<%= answer.id %>/responses">Comment on Answer</a>
        <ul>
          <% @answer_responses[counter].each do |response| %>
            <li class="answer-comment-list">
              Answer Comment: <%= response.body %><br>
              <span>Written by <%= response.user.email %></span>
            </li>
          <% end %>
          <!-- Link to post an answer comments -->
        </ul>
        <% counter += 1 %>
      </li>
  <% end %>
</ul>

<a href="/questions/<%= @question.id %>/answers">Answer a Question</a>

